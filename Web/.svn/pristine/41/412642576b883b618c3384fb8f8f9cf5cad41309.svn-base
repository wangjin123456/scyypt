ul {
    margin-bottom: 0;
}
.bg {
    background-color: #fff;
    padding-top: 20px;
}
label {
    color: #444;
}
.ng-valid[required], .ng-valid.required, .ng-Validators.required  {
    border-left: 5px solid #42A948; /* green */
  }
  
.ng-invalid:not(form)  {
    border-left: 5px solid #a94442; /* red */
}

.basicInformation {
    margin-left: 30px;
    font-size: 14px;
    color: #444;
    font-weight: bold;
}
.addInformation {
    position: absolute;
    right: 30px;
    top: 0px;
}

.formTop {
    border-bottom: 1px solid #efefef;
    padding-bottom: 20px;
}
.formMiddle {
    border-bottom: 1px solid #efefef;
    padding-bottom: 20px;
    padding-top: 20px;
}
.forBottm {
    padding-bottom: 20px;
    padding-top: 20px;
}
.buttomTemp {
    padding-top: 50px;
    padding-bottom: 50px;
}
.btnSize {
    display: inline-block;
    width: 120px;
    height: 36px;
    text-align: center;
    background-color: #fff;
    border: 1px solid #ccc;
}
.btnPrimary {
    background-color: #2eb6f4;
    color: #fff;
}

.queryLink {
    height: 100px;
    position: relative;
    overflow: auto;
}
.queryLinkPro {
    width: 100%;
    border: 1px solid #ccc;
}
.queryLinkPro > li {
    height: 20px;
    line-height: 20px;
    border-bottom: 1px solid #ccc;
}
.queryLinkPro > li:hover {
    background-color: #a94442;
}
.assocProject {
    border: none;
    float: left;
    font-size: 14px;
    color: #555;
}
.assocProject:focus {
    outline: none;
}
.queryLinkProPosition {
    position: relative;
    box-sizing: border-box;
}
.listContent {
    float: left;
}
.listContent > ul > li {
    padding: 2px 8px;
    background-color: #ccc;
    float: left;
    margin-right: 2px;
}
.listContent > ul > li >span {
    margin-right: 5px;
}
.listContent > ul > li > i {
    cursor: pointer;
}


.form-control {
    height: auto;
    min-height: 34px;
    overflow: hidden;
}