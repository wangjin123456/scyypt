<div class="power_bg">
  <div class="btnGroup">
      <button type="button" class="btn btn-default" routerLink = '/indexpage/indexhome/setauthority'>用户管理</button>
      <button type="button" class="btn btn-default" routerLink = '/indexpage/indexhome/rolemanage'>角色管理</button>
      <button type="button" class="btn btn-default" routerLink = '/indexpage/indexhome/modulemanage'>模块管理</button>
      <button type="button" class="btn btn-default" routerLink = '/indexpage/indexhome/importuser'>导入用户</button>
  </div>
  <div>
      <div class="searchCol">

      </div>
      <div class="datatable">
        <table class="table">
          <thead>
            <tr>
              <th>权限</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody>
            <tr *ngFor = 'let auth of authData; let i = index'>
              <td>{{auth.operate}}</td>
              <td>
                <ul class="ul-left">
                  <li *ngFor = 'let operation of auth.handle; let j = index'>
                    <input type="checkbox" (change) = 'changeOperation(i,j,$event)'>{{operation.operationName}}
                  </li>
                </ul>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
  </div>
  <div class="btnGroup">
    <button type="button" class="btn btn-default" (click) = 'keepData()'>保存</button>
    <button type="button" class="btn btn-default" >取消</button>
</div>
  <ng-template #role></ng-template>
</div>